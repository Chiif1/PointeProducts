<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    android:orientation="vertical"
    tools:context=".XSecureCheckout">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Secure Checkout"
        android:textSize="40dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Guest Checkout:"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/Xguest_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout As A Guest"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/XcreateCustomerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:text="Click Here: Create Customer Account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Already Have An Account:"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/XemailUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="e-mail"
        android:textSize="20dp"
        android:text="three@gmail.com"
        android:inputType="text"
        android:textColorHint="#8C8989" />

    <EditText
        android:id="@+id/XpasswordUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textSize="20dp"
        android:text="one"
        android:inputType="textPassword"
        android:textColorHint="#8C8989" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailMatch"
        android:layout_below="@+id/confirmEmailTxBoxGuest"
        android:textColor="#FF1744"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/XexistingUser_checkoutBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Existing User Checkout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Forgot password?"
        android:textColor="@color/black"/>


</LinearLayout>