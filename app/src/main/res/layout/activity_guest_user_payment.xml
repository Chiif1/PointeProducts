<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestUserPayment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/firstNameGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/firstNameTxBoxGuest"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/firstNameGuest"
                android:text="TestFirstName"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/lastNameGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="20dp"
                android:layout_below="@+id/firstNameTxBoxGuest"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/LastNameTxBoxGuest"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/lastNameGuest"
                android:text="TestLastName2222"/>


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/emailAddressGuest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_below="@+id/LastNameTxBoxGuest"/>

            <EditText
                android:id="@+id/emailTxBoxGuest"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/emailAddressGuest"
                android:layout_marginBottom="20dp"
                android:text="Test@gmail.com"/>


            <TextView
                android:id="@+id/shipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Address:"
                android:textSize="20dp"
                android:layout_below="@id/emailTxBoxGuest"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/nameRec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:layout_below="@+id/shipping"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/nameTxBox"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/nameRec"
                android:text="TestReceiptName"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:layout_below="@id/nameTxBox" />

            <EditText
                android:id="@+id/addressTxBox"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_below="@id/address"
                android:text="TestAddress"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/addressTxBox">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/checkBoxText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account With Guest Information"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <com.stripe.android.view.CardInputWidget
                android:id="@+id/cardInputWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/addressTxBox"/>


            <Button
                android:text="Pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/payButtonGuest"
                android:layout_below="@id/cardInputWidget"
                android:layout_marginTop="50dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>